<!-- Similar to new template -->

<%- include("../partials/header")%>


<div class="container">
    <h1 class="text-center"> Edit <%= adventure.name %> </h1> <!-- we could also do: <h1 style="text-align: center;" > same as BS3 class="text-center" -->
    <div class="row">
        <!-- don't use grid here: <div class="col-xs-3"> this does not work! -->
        <div style="width: 30%; margin: 30px auto;">    

            <!-- action: points to "/adventures", REST format -->
            <form action = "/adventures/<%= adventure._id %>?_method=PUT" method ="POST">

                <!-- adventure name -->
                <div class="form-group">    <!-- adds margin below the input elt-->
                    <input class="form-control" type="text" name ="adventure[name]" value="<%= adventure.name %>"> 
                </div>

                <!-- adventure image url -->
                <div class="form-group">
                    <input class="form-control" type="text" name ="adventure[image]" value="<%= adventure.image %>"> 
                </div>

                <!-- adventure price: min: $0.01, steps in pennies/cents -->
                <div class="form-group">
                    <input class="form-control" type="number" name="adventure[price]" min="0.01" step="0.01" value="<%= adventure.price%>">
                </div>

                <!-- adventure description -->
                <div class="form-group">
                    <!-- we can't use value="" for textarea -->
                    <textarea class="form-control" name="adventure[description]" cols="30" rows="10"><%= adventure.description %></textarea>
                </div>

                <div class="form-group">
                    <!-- btn-block ==> makes btn into block element -->
                    <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>
    
            </form>
            
            <!-- BS3 makes it so easy to have <a> tags as buttons -->
            <a class=" btn btn-default" href="/adventures"> See All adventures </a>
        </div>
    </div>
</div>


<%- include("../partials/footer")%>

